{% extends 'base.html.twig' %}

{% block body %}
{% if users and users|length > 0 %}
        {% for user in users %}
            <div class="card mb-3" id="user-{{ user.id }}">
                <div class="card-body">
                    <h5 class="card-title">{{ user.login }}</h5>
                    {% if user.isAdmin %}<span class="badge bg-info">Administrateur</span>{% endif %} {% if user.lastLoginDatetime %}<span class="badge bg-secondary">Derni√®re connexion : {{ user.lastLoginDatetime|date("d/m/Y H:i:s") }}</span>{% endif %}
                    {% if user.email %}<p class="mb-0 mt-2"><a class="text-light me-3" href="mailto:{{ user.email }}" target="_blank">{{ user.email }}</a>{% endif %}
                </div>
            </div>
        {% endfor %}
{% endif %}
{% endblock %}